{
  "name": "hubspot-document-governance-app",
  "version": "1.0.0",
  "description": "HubSpot app that automatically uploads Deal and Contact documents to SharePoint/OneDrive, replaces attachments with secure links, tracks versions, enforces document policies, and provides a governance dashboard with expiration alerts, compliance scoring, and document workflows.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "keywords": ["hubspot", "sharepoint", "document-governance", "compliance", "onedrive"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^2.6.4",
    "@hubspot/api-client": "^11.1.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "axios": "^1.6.5",
    "better-sqlite3": "^9.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
