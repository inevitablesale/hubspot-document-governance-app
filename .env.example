# Server Configuration
PORT=3000
NODE_ENV=development

# HubSpot OAuth Configuration
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_REDIRECT_URI=http://localhost:3000/oauth/hubspot/callback
HUBSPOT_SCOPES=crm.objects.contacts.read,crm.objects.contacts.write,crm.objects.deals.read,crm.objects.deals.write,files,timeline

# Microsoft/SharePoint OAuth Configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_tenant_id
MICROSOFT_REDIRECT_URI=http://localhost:3000/oauth/microsoft/callback
SHAREPOINT_SITE_ID=your_sharepoint_site_id
SHAREPOINT_DRIVE_ID=your_drive_id

# Database Configuration
DATABASE_PATH=./data/governance.db

# Security
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=your_32_character_encryption_key

# Compliance Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv
DOCUMENT_RETENTION_DAYS=365
COMPLIANCE_CHECK_INTERVAL_HOURS=24
